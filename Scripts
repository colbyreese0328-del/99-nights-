--=============================
-- OP Roblox Script GUI - Drako UI Style
--=============================
-- Load Drako UI Library
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()

-- Create Window
local Window = Library.CreateLib("DrakoHub Script", "DarkTheme") -- "DarkTheme" or "LightTheme"

-- ==========================
-- Main Tab
-- ==========================
local MainTab = Window:NewTab("Main")
local ScriptsSection = MainTab:NewSection("Scripts")

-- Button for Fight in a School
ScriptsSection:NewButton("Fight in a School", "Execute Fight in a School Script", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/colbyreese0328-del/99-nights-/refs/heads/main/fiasbydrakohub"))()
end)

-- Button for TSB
ScriptsSection:NewButton("TSB", "Execute TSB Script", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/colbyreese0328-del/99-nights-/refs/heads/main/Tsbbydrakohub"))()
end)

-- Button for 99 Nights
